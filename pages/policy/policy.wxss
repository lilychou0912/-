/* pages/policy/policy.wxss */
@import '../../style/myfont.wxss';
page {
  position: flex;
  flex-direction: column;
  background-color: #efdcd5;
  margin: 0px;
  /*下面的是关键的设置100%显示*/
  background-size: auto 100%;
}

.center {
  display: inline-block;
  margin-top: 36rpx;
  margin-left: 30rpx;
  margin-right: 50rpx;
  width: 696rpx;
  height: 880rpx;
}

.footer, .cloud {
  width: 100%;
  height: 270rpx;
  z-index: 0;
}

/*center-top*/

.center-top {
  width: 696rpx;
  height: 100rpx;
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.salary-mouth {
  font-size: 66rpx;
  color: #ff8a65;
  font-weight: bold;
  margin-bottom: 11rpx;
}

.get, .yuan, .weui-cell__bd {
  font-size: 34rpx;
  color: #ff8a65;
  font-weight: bold;
}

.get-salary {
  font-size: 73rpx;
  color: #ff8a65;
  font-weight: bold;
}

.get2 {
  display: flex;
  align-items: flex-end;
}

.yuan {
  margin-bottom: 25rpx;
}

/*center-bottom*/

.center-bottom {
  width: 616rpx;
  height: 372rpx;
  margin: 10rpx 40rpx;
}

.weui-cell {
  padding: 20rpx 30rpx;
}

.font{
  font-family:'FZXS12';
  color: #8d6868;
  line-height: 50rpx;
}