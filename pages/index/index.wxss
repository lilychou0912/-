/**index.wxss**/
@import '../../style/myfont.wxss';
.container{
  display: flex;
  flex-direction: column;
  height: 100vh;
  align-items: center;
  justify-content: space-between;
  background-color: #efdcd5;
}

.panel-display{
  width: 100%;
  flex: 0.5;
}

.panel-btns{
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.btns-rows{
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: row;
  background-color: #bcaaa4
}

.btn{
  text-align: center;
  box-sizing: border-box;
  flex: 1;
  display: flex;
  font-size: 28px;
  color: #E2DBA7;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #f5d48d;
  font-family: 'FZXS12';
}

.btn.active{
  background-color: #e3e4e5;
}

.btn:not(:last-child){
  border-right: 1px solid #c3c6c7;
}

#btns2-right{
  border-left: 1px solid #c3c6c7;
}

#display-num{
  display: inline-block;
  font-size: 36px;
  position: absolute; 
  bottom: 5vh; 
  right: 3vw; 
  font-family: 'FZXS12';
  color: #ff8a65;
}

#display-op{
  display: inline-block;
  font-size: 16px;
  position: absolute; 
  bottom: 1vh; 
  right: 3vw; 
  font-family: 'FZXS12';
  color: #ff8a65;
  
}

#btns2{
  flex: 2;display: flex;flex-direction: row;
}

#btns2-left{
  flex: 3;display: flex;flex-direction: column;
}

.btns2-left-part{
  display: flex; flex-direction: row;flex-grow: 1;
}

#btn-c{
  color: #ff8a65;
}

#icon-about{
  position: absolute; 
  left: 3vw;
  top: 3vw;
}

.question{
   color: #ff8a65;
   font-weight: bold;
   margin: 30rpx 0 0 700rpx;
   font-size: 36rpx;
}