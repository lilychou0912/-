/* pages/health/health.wxss */
@import '../../style/myfont.wxss';
page {
  background-color: #efdcd5;
  /*下面的是关键的设置100%显示*/
  width: 100%;
  height: 100%;
  padding-bottom: 300rpx;
  display: flex;
  flex-direction: column;
}

.center {
  display: inline-block;
  margin-top: 36rpx;
  margin-left: 30rpx;
  margin-right: 50rpx;
  width: 696rpx;
  height: 880rpx;
  background-image: url('https://s2.ax1x.com/2019/03/23/AG5tPA.png');
  background-repeat: no-repeat;
  background-size: cover;
}

.footer, .cloud {
  width: 100%;
  height: 270rpx;
  z-index: 0;
}

/*center-top*/

.center-top {
  width: 696rpx;
  height: 264rpx;
  margin-top: 56rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.salary-mouth {
  font-size: 35rpx;
  color: #8d6868;
  font-weight: bold;
  margin-bottom: 11rpx;
}
.get, .yuan, .weui-cell__bd {
  font-size: 30rpx;
  color: #8d6868;
  font-weight: bold;
}

.get-salary {
  font-size: 88rpx;
  color: #ff8a65;
  font-weight: bold;
}

.get2 {
  display: flex;
  align-items: flex-end;
}

.yuan {
  margin-bottom: 25rpx;
}

/*center-bottom*/

.center-bottom {
  width: 616rpx;
  height: 372rpx;
  margin: 60rpx 40rpx;
}

.weui-cell {
  padding: 12rpx 30rpx;
}

.weui-cell__ft {
  font-size: 30rpx;
  color: #8d6868;
  font-weight: bold;
}

.weui-cell__dt{
  font-size: 30rpx;
  color: #8d6868;
  font-weight: bold;
}

.git-end {
  font-size: 32rpx;
  color: #ff4902;
  font-weight: bold;
}

.count {
  padding-left: 220rpx;
}

.tax-count-btn{
  height: 45.6px;
  width: 159.4px;
}

.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
    font-size: 40rpx;
    color: #ff8a65;
    font-family: 'FZXS12';
}
.bg-g{
  background: #efdcd5;
}
.th {
  width: 40%;
  justify-content: center;
  background: #bcaaa4;
  font-size: 40rpx;
  color:  #8d6868;
  font-family: 'FZXS12';
  display: flex;
  height: 3rem;
  align-items: center;
}
.swiper-tab{ 
  width: 100%; 
  border-bottom: 2rpx solid #777777; 
  text-align: center; 
  line-height: 70rpx;
  } 

.swiper-tab-list{ 
  font-size: 30rpx; 
  display: inline-block; 
  width: 40%; 
  color: #777777; 
} 

.on{ 
  color: #ff8a65; 
  border-bottom: 5rpx 
  solid #ff8a65;
  } 
  
.swiper-box{ 
  display: block;
   height: 120%; 
   width: 100%; 
   } 

   .title {
   font-size: 35rpx;
   color: #fff;
   text-align: center;
   }
   .page__hd{
    height:10%;
    width: 100%;
    text-align: center;
  }
   .page_body{
  display: flex;
  flex-direction: column;
  height:90%;
  width: 100%;
   }
   .page__title{
    display: inline-block;
    padding: 30rpx 60rpx 10rpx 60rpx;
    font-size: 30rpx;
    color: #8d6868;
    border-bottom: 1px solid  #8d6868;
}
   .section{
    flex: 1;
    margin: 30rpx 30rpx;
  }

   .section2{
    flex: 1;
    margin: 0rpx 30rpx;
   }

   .section3{
    flex: 1;
    margin: 30rpx 30rpx;
    background-color: white;
   }

   .section__title{
    background-color: #8d6868; 
    color:#fff;
    text-align: center;
    margin: 30rpx  16rpx ;
    padding: 20rpx 30rpx;
    font-family:'FZXS12'; 
    font-size: 32rpx;
    font-weight: bold;
}
  .input{
  border-radius: 3px;
  margin: 30rpx  16rpx;
  padding: 20rpx 30rpx;
  background-color: white;
  box-shadow: 4rpx 4rpx 4rpx #ccc;
  font-family:'FZXS12'; 
    font-size: 35rpx;
    color:#ff8a65;
    font-weight: bold;
  }

image{
  float: center;
  height: 20px;
  width: 20px;
}

.result{
  flex: 2;
  text-align: center;
  font-size: 35rpx;
    color:#ff8a65;
    font-weight: bold;
}
.result view{
  font-size: 35rpx;
  box-shadow: 4rpx 4rpx 4rpx #ccc;
  margin:20rpx 25rpx;
  padding:20rpx 20rpx;
  background-color: white;
}