/* pages/tax-year/tax-year.wxss */
@import '../../style/myfont.wxss';
page {
  overflow: hidden;
  position: fixed;
  background-color: #efdcd5;
  margin: 0px;
  /*下面的是关键的设置100%显示*/
  background-size: auto 100%;
}

.center {
  display: inline-block;
  margin-top: 36rpx;
  margin-left: 30rpx;
  margin-right: 50rpx;
  width: 696rpx;
  height: 880rpx;
  background-image: url('https://s2.ax1x.com/2019/03/23/AG5tPA.png');
  background-repeat: no-repeat;
  background-size: cover;
}

.footer, .cloud {
  width: 100%;
  height: 270rpx;
  z-index: 0;
}

/*center-top*/

.center-top {
  width: 696rpx;
  height: 264rpx;
  margin-top: 56rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.salary-mouth {
  font-size: 35rpx;
  color: #8d6868;
  font-weight: bold;
  margin-bottom: 11rpx;
}
.get, .yuan, .weui-cell__bd {
  font-size: 30rpx;
  color: #8d6868;
  font-weight: bold;
}

.get-salary {
  font-size: 88rpx;
  color: #ff8a65;
  font-weight: bold;
}

.get2 {
  display: flex;
  align-items: flex-end;
}

.yuan {
  margin-bottom: 25rpx;
}

/*center-bottom*/

.center-bottom {
  width: 616rpx;
  height: 372rpx;
  margin: 60rpx 40rpx;
}

.weui-cell {
  padding: 12rpx 30rpx;
}

.weui-cell__ft {
  font-size: 30rpx;
  color: #8d6868;
  font-weight: bold;
}

.git-end {
  font-size: 32rpx;
  color: #ff4902;
  font-weight: bold;
}

.count {
  position: absolute;
  padding-left: 180rpx;
  padding-top:100rpx;
}

.tax-count-btn{
  height: 45.6px;
  width: 159.4px;
}

.font{
  font-family:'FZXS12';
}

.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
    font-size: 40rpx;
    color: #ff8a65;
    font-family: 'FZXS12';
}
.bg-g{
  background: #efdcd5;
}
.th {
  width: 40%;
  justify-content: center;
  background: #bcaaa4;
  font-size: 40rpx;
  color:  #8d6868;
  font-family: 'FZXS12';
  display: flex;
  height: 3rem;
  align-items: center;
}