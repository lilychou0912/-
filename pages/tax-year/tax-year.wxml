<!--pages/tax-year/tax-year.wxml-->
<view class="swiper-tab font"> 
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">全年总计情况</view> 
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">各月详细数据</view> 
</view> 
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange"> 
  <!-- 全年总计情况 -->
  <swiper-item> 
  <view class='center  font'>
  <!--center-top-->
  <view class='center-top'>
    <view class='salary-mouth'>全年薪资清单</view>
    <view class='get'>到手工资</view>
    <view class='get2'>
      <view class='get-salary'>{{sum}}</view>
      <view class='yuan'>元</view>
    </view>
  </view>
  <!--center-bottom-->
  <view class='center-bottom'>
      <view class="weui-cell">
      <view class="weui-cell__bd">全年税前收入总计</view>
      <view class="weui-cell__dt">{{yearSalary}}元</view>
      </view>
      <view class="weui-cell">
      <view class="weui-cell__bd">全年五险一金总计</view>
      <view class="weui-cell__ft"> {{yearTotal}}元</view>
      </view>
      <view class="weui-cell">
      <view class="weui-cell__bd">全年专项附加扣除总计</view>
      <view class="weui-cell__ft">{{yearSpecial}}元</view>
      </view>
      <view class="weui-cell">
      <view class="weui-cell__bd">全年其他附加扣除总计</view>
      <view class="weui-cell__ft">{{yearOther}}元</view>
      </view>
      <view class="weui-cell">
      <view class="weui-cell__bd">全年个人所得税总计</view>
      <view class="weui-cell__ft">{{need}}元</view>
      </view>
      </view>
     </view>
  </swiper-item> 
  <!-- 各月详细数据 -->
  <swiper-item> 
   <view class="container font">
   <table tableThemes="{{themeArr}}" tableItems="{{yeararray}}"></table>
  </view>
  </swiper-item> 
</swiper> 
 <canvas canvas-id="pieCanvas2" class="canvas" style="height:300px" bindtouchstart="touchHandler"></canvas>